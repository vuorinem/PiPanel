@using PiPanel.Shared
@using PiPanel.Shared.Camera;
@inject HttpClient Http
@inject IJSRuntime JS

<h2>@Camera.Label</h2>

<p>
    <b>Day:</b> @selectedDate.ToShortDateString()<br />
    <b>Time:</b> @selectedImage?.CreatedAt.ToShortTimeString()
</p>

<div class="justify-content-center">
    <button @onclick="() => ChangeDate(-1)"><span class="oi oi-caret-left"></span> Previous day</button>
    <button @onclick="() => SelectPreviousImage()"><span class="oi oi-chevron-left"></span> Previous image</button>
    <button @onclick="() => SelectNextImage()">Next image <span class="oi oi-chevron-right"></span></button>
    <button @onclick="() => ChangeDate(1)">Next day <span class="oi oi-caret-right"></span></button>
</div>

<p>
    @if (images is null)
    {
        <em>Loading...</em>
    }

    <img class="img-fluid @(selectedImage is null ? "invisible" : "visible")" @ref="imageElement" alt="Image captured from @Camera.Label" />
</p>


@code {
    private const string LoadingImageSrc = "data:image/svg+xml;base64,";

    [Parameter]
    [EditorRequired]
    public CameraInfo Camera { get; set; } = default!;

    private DateOnly selectedDate = DateOnly.FromDateTime(DateTime.Today);
    private List<CapturedImage>? images;
    private CapturedImage? selectedImage;
    private ElementReference imageElement;

    protected override async Task OnInitializedAsync()
    {
        await RefreshImages();

        if (images is not null)
        {
            await SelectImage(images.Last());
        }
    }

    protected async Task RefreshImages()
    {
        images = await Http.GetFromJsonAsync<List<CapturedImage>>($"CameraCapture?cameraLabel={Camera.Label}&date={selectedDate.ToShortDateString()}");
    }

    protected async Task ChangeDate(int daysChanged)
    {
        selectedImage = null;
        images = null;

        selectedDate = selectedDate.AddDays(daysChanged);

        await RefreshImages();

        if (images is not null && images.Any())
        {
            await SelectImage(daysChanged > 0 ? images.First() : images.Last());
        }
    }

    protected async Task SelectImage(CapturedImage? image)
    {
        selectedImage = image;

        if (image is not null)
        {
            await SetImageContent(image);
        }
    }

    protected async Task SelectPreviousImage()
    {
        if (images is null || !images.Any())
        {
            return;
        }
        else if (selectedImage is null)
        {
            await SelectImage(images.First());
        }
        else
        {
            var imageIndex = images.IndexOf(selectedImage);

            if (imageIndex > 0)
            {
                await SelectImage(images[imageIndex - 1]);
            }
            else
            {
                await ChangeDate(-1);
            }
        }
    }

    protected async Task SelectNextImage()
    {
        if (images is null || !images.Any())
        {
            return;
        }
        else if (selectedImage is null)
        {
            await SelectImage(images.Last());
        }
        else
        {
            var imageIndex = images.IndexOf(selectedImage);

            if (imageIndex < images.Count - 1)
            {
                await SelectImage(images[imageIndex + 1]);
            }
        }
    }

    private async Task SetImageContent(CapturedImage image)
    {
        await JS.InvokeVoidAsync("setImageSrc", imageElement, LoadingImageSrc);

        var stream = await Http.GetStreamAsync($"CameraCapture/Image?blob={image.BlobName}");
        var streamReference = new DotNetStreamReference(stream);

        await JS.InvokeVoidAsync("setImageFromStream", imageElement, streamReference);
    }
}
